#include <iostream>
using namespace std;

double Search_minimum_element(double **array, int n)
{
		double min = array[1][0];
		for (int i = 2; i < n; i++)

			for (int j = 0; j < i; j++)
				min = (array[i][j] < min) ? array[i][j] : min;

		return min;
}

double Search_maximum_element(double **array, int n)
{
	double max = array[0][1];
	for (int i = 0; i < n - 1; i++)

		for (int j = 2; i < j && j < n; j++)
			max = (array[i][j] > max) ? array[i][j] : max;

	return max;
}


int main()
{
	int n;
	cout << "Enter the number of elements in the array: ";
	cin >> n;
	double** array = new double* [n];
	for (int i = 0; i < n; i++)
	{
		array[i] = new double[n];
		for (int j = 0; j < n; j++)
			cin >> array[i][j];
	}
	cout << endl << "The minimum element located under the main diagonal is " << Search_minimum_element(array, n) << endl;
	cout << "The maximum element located above the main diagonal is " << Search_maximum_element(array, n);
	cin.get();
}
