#include <iostream>
using namespace std;

int main()
{
	double surname = 10, lesson = 10;
	int i, j;

	double **marks = new double *[surname];

		double average = 0;

		for (i = 0; i < surname; i++)
		{
			marks[i] = new double [lesson];
			for (j = 0; j < lesson - 1; j++)
			{
				marks[i] [j] = 1 + rand() % 5;
				average += marks[i] [j];
				cout << marks[i][j] << " ";
			}
			marks[i] [9] = average / (lesson - 1);
			cout << marks[i][9] << endl;
			average = 0;
		}

		double min = marks[0][9];
		int min_number = 0;
		for (i = 0; i < surname; i++)
		{
			if (marks[i][9] < min)
				min = marks[i][9];
			min_number = i;
		}

	
		system("pause");
}
